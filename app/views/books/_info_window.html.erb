<div class="card-offers">
  <p> <%= link_to "See #{user.nickname}'s books", profile_path(user) %> </p>
  <div class="display-books">
    <ul class="list-group" style="width: 220px">
      <% user.books.each do |book| %>
        <li class="list-group-item d-flex justify-content-around align-items-center">
          <div class="book-list">
            <%= link_to book_path(book) do %>
              <% book.photos.each do |photo| %>
                <%= image_tag photo, crop: :fill, class:"map-book"%>
              <% end %>
            <% end %>
          </div>
          <p> <%= book.title %> </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
