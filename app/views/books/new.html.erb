<div class="container">
  <div class="background-create-wrapper-1">
    <div id="form-wrapper">
      <div id="create-book-box m-8">
        <div class="nested-create-form m-8">
          <div id="header-create-form">
            <h2>Add a new book to your profile</h2>
            <%= image_tag "figures/2.png", id:"figure-reading-create" %>
          </div>
          <%= simple_form_for(@book) do |f| %>
            <%= f.input :title, placeholder: 'Harry Potter', input_html: { class: "form-borders-book" }, class: "form-control" %>
            <%= f.input :author, placeholder: 'J. K. Rowling', input_html: { class: "form-borders-book" }, class: "form-control" %>
            <%= f.input :year, placeholder: '1997', input_html: { class: "form-borders-book" }, class: "form-control" %>
            <%= f.input :pages, placeholder: '500', input_html: { class: "form-borders-book" }, class: "form-control" %>
            <%= f.input :description, placeholder: 'please take a moment to describe your book in a few sentences', input_html: { class: "form-borders-book" }, class: "form-control" %>
            <%= f.input :genre, collection: ['Action and Adventures', 'Classics', 'Comic Book/ Graphic Novel', 'Detective/ Mystery', 'Fantasy', 'Historical Fiction', 'Horror', 'Literary Fiction', 'Romance', 'Science-Fiction', 'Short Stories', 'Thrillers', 'Womens Fiction', 'Biographies/ Autographies', 'Cookbooks', 'Essays', 'History', 'Poetry', 'True Crime'], prompt: "Select the genre that fits best", input_html: { class: "form-borders-book" }, class: "form-control" %>

            <!-- <div class="container d-flex justify-content-center"> -->
            <%= f.input :photos, as: :file, input_html: { multiple: true }, hint: 'please upload high-resolution pictures of your book', class: "form-control" %>
            <!-- </div> -->
            <div class="form-link-buttons">
              <%= f.submit class: "btn-create" %>
              <%= link_to "Back", books_path(@book), method: :get,  class: "btn-create-booking" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

