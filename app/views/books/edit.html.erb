<div class="container">
  <div class="background-create-wrapper">
    <div id="form-wrapper">
      <div id="create-book-box m-8">
        <div class="nested-create-form m-5">
          <div id="header-create-form">
            <h2>Update the information of your book</h2>
            <%= image_tag "figures/2.png", id:"figure-reading-create" %>
          </div>
          <%= simple_form_for(@book) do |f| %>
            <%= f.input :title, placeholder: 'Harry Potter' %>
            <%= f.input :author, placeholder: 'J. K. Rowling' %>
            <%= f.input :description, placeholder: 'please take a moment to describe your art book in a few sentences' %>
            <%= f.input :genre, placeholder: 'Fantasy' %>
            <%= f.input :year, placeholder: '1997' %>
            <%= f.input :pages, placeholder: '500' %>
            <%= f.input :photos, as: :file, input_html: { multiple: true }, hint: 'please upload high-resolution pictures of your book' %>
            <%= f.submit class: "btn-create mt-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "â—„ Go back", book_path(@book), method: :get,  class: "btn-back-review" %>
</div>

