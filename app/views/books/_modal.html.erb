<div class="modal fade bd-example-modal-lg" id="booking-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" id="modal-booking" role="document">
    <div class="modal-content">
      <div class="background-create-wrapper-3">
        <div id="form-wrapper">
          <div id="create-book-box m-8">
              <div class="nested-create-form m-8">
              <div id="header-create-form">
                  <h2>When do you want to read it?</h2>
                  <%= image_tag "figures/2.png", id:"figure-reading-create" %>
              </div>
              <%= simple_form_for [@book, @booking] do |f| %>
                <div class="form-aligned">
                  <%= f.input :from, as: :string, required: false, input_html: {class: "datepicker form-borders"}, class: "form-control", placeholder: "click to select start date" %>
                  <%= f.input :until, as: :string, required: false, input_html: {class: "datepicker form-borders"}, class: "form-control", placeholder: "click to select end date" %>
                </div>
                  <div class="form-link-buttons d-flex justify-content-center">
                  <%= f.button :submit, "Submit", class: "btn-create-booking" %>
                  </div>
              <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
