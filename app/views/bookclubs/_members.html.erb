<div class="modal fade bd-example-modal-lg2" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="row">
		<div class="col-12 col-lg-12">
            <div class="mmembers-grid-bookclubs">
              <h1 class="text-center">Members</h2>
                <% @bookclub_users.each do |user| %>
                    <%= link_to page_path(user) do %>
                        <div class="members-grid-card">
                            <% if user.user.photo.attached? %>
                                <%= cl_image_tag user.user.photo.key, crop: :fill%>
                            <% else %>
                                <img src="https://images.unsplash.com/photo-1545239351-cefa43af60f3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1875&q=80"/>
                            <% end %>
                            <div class="bookclub-user-info">
                                <h1><%= user.user.first_name  %> <%= user.user.last_name %></h1>
                                <h2>from: <%= user.user.address %></h2>
                                <p><%= user.user.about %></p>
                                <p>Has <%= user.user.books.length %> books!
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
	      </div>
        </div>
	  </div>
    </div>
</div>