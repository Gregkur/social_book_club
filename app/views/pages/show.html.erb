<div class="d-flex flex-column" style="align-items: center">

  <div class="profile-wrapper pink">


    <% if @user.photo.attached? %>
      <%= cl_image_tag @user.photo.key, crop: :limit, class:"user-img" %>
    <% else %>
      <img href="https://images.unsplash.com/photo-1576078044571-8ea98b0b0963?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80">
    <% end %>

    <div class="profile-user-info">

      <% if @user.first_name.present? %>
        <h1><%= @user.first_name %> <%= @user.last_name %></h1>
        <p><i class="fas fa-map-pin"></i><%= @user.address %></p>
      <% else %>
        <h1>Hello Stranger!</h1>
        <p><i class="fas fa-map-pin"></i>???</p>
      <% end %>

      <div class="profile-about-me">
        <% if @user.about.present? %>
          <p><%= @user.about %></p>
        <% else %>
          <p>Tell us about yourself, beautiful stranger!<p>
        <% end %>
      </div>

    </div>

    <div class="bookclubs-books-wrapper">

      <div class="bookclubs-wrapper">
        <%#= TODO: ADD BOOKCLUBS  %>
        <%= image_tag "prince.jpg" %>
        <%= image_tag "harry.jpg" %>
        <%= image_tag "testaments.jpg" %>
        <p>+2 more bookclubs</p>
      </div>

      <div class="books-wrapper">
        <%#=TODO add links and math  %>
        <% @user.books.each do |book| %>
          <% book.photos.each do |photo| %>
            <%= image_tag photo %>
            <% end %>
        <% end %>
        <p>+<%#=@user.books.length - 3%>5 more books</p>
      </div>

    </div>

  </div>

  <div class="booking-wrapper yellow my-5">

    <h1>My bookings</h1>

    <div class="container">
      <div class="row">
		    <div class="col-6 col-6">
          <div class="bookings-grid">
            <% @user.bookings.each do |booking| %>
              <div class=" booking-card">
                <img src="https://images.unsplash.com/photo-1587425988139-ea99195d095e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80"/>
                  <div class="booking-card-info">
                    <h2><%= booking.book.title %></h2>
                    <div class="booking-card-dates">
                      <h3>Location: <%= booking.user.address %></h3>
                      <h3>Booking dates:</h3>
                      <p>from <%= booking.from.to_formatted_s(:long) %> until <%= booking.until.to_formatted_s(:long) %></p>
                    </div>
                  </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>


  </div>

  <div class="container text-center my-5">
    <div class="mb-5">
      <%= link_to "Offer a new book", new_book_path, :method => :get, class:"button-red-profile"  %>
      <%= link_to "Create a new bookclub", new_bookclub_path, :method => :get, class:"button-red-profile"  %>
    </div>
  </div>

</div>
