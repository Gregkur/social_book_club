<div class="banner d-flex flex-column">
  <div class="container d-flex justify-content-center">
    <div class="container d-flex justify-content-center">
      <div>
        <h1>Sharing is caring</h1>
        <p>let's do it with <strong>books!</strong></p>
      </div>
      <%= image_tag "figures/2.png", id:"figure-reading" %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <%= simple_form_for :search, url: books_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-purple">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
</div>

